<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.generar.GenerarSolicitudFragment">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="415dp"
        android:layout_height="501dp"
        android:layout_marginTop="64dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27.3dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:orientation="horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.09">

        <RadioButton
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:buttonTint="#FF0303"
            android:fontFamily="@font/roboto"
            android:text="Tala"
            android:textColor="#FF0303"
            android:textSize="18sp" />

        <RadioButton
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:buttonTint="#019A13"
            android:fontFamily="@font/roboto"
            android:text="Plantar"
            android:textColor="#019A13"
            android:textSize="18sp" />

    </RadioGroup>

    <TextView
        android:id="@+id/tvMotico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="309dp"
        android:fontFamily="@font/roboto"
        android:text="Motivo:"
        android:textColor="#019A13"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/editText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.929" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="346dp"
        android:layout_height="156dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="387dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/imagen"
        android:layout_width="220dp"
        android:layout_height="187dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="163dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2" >

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/camara" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/seleccionar"
        android:layout_width="234dp"
        android:layout_height="55dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/btn_redondo"
        android:backgroundTint="@color/appColor"
        android:fontFamily="@font/roboto_black"
        android:text="SELECCIONAR UBICACIÃ“N"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagen" />


</androidx.constraintlayout.widget.ConstraintLayout>